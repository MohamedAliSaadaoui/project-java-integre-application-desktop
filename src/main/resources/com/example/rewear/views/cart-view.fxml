<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.example.rewear.controller.CartController" 
      spacing="20" style="-fx-padding: 20;">
    
    <Text text="Shopping Cart" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="productNameColumn" text="Product" prefWidth="200"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="totalColumn" text="Total" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
    
    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Label fx:id="totalLabel" text="Total: $0.00" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button fx:id="checkoutButton" text="Checkout" onAction="#handleCheckout"/>
        <Button fx:id="continueShoppingButton" text="Continue Shopping" onAction="#handleContinueShopping"/>
    </HBox>
    
</VBox> 