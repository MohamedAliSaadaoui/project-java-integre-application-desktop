<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.rewear.Gestionevent.Controller.ListEvent">
    <top>
        <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: #f5f5f5;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Liste des Événements" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="eventTable" prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="titreColumn" prefWidth="150.0" text="Titre" />
                <TableColumn fx:id="dateDebutColumn" prefWidth="120.0" text="Date Début" />
                <TableColumn fx:id="dateFinColumn" prefWidth="120.0" text="Date Fin" />
                <TableColumn fx:id="lieuColumn" prefWidth="150.0" text="Lieu" />
                <TableColumn fx:id="statutColumn" prefWidth="100.0" text="Statut" />
                <TableColumn fx:id="categorieColumn" prefWidth="120.0" text="Catégorie" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="60.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" prefHeight="30.0" prefWidth="120.0" text="Actualiser" />
                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefHeight="30.0" prefWidth="120.0" text="Ajouter" />
                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" prefHeight="30.0" prefWidth="120.0" text="Modifier" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>