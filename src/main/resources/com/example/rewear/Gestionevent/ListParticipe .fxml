<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.rewear.Gestionevent.Controller.ListParticipe"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Mes Participations aux Événements" style="-fx-font-weight: bold;">
                <font>
                    <Font size="18"/>
                </font>
            </Label>
            <Separator/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="participationsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="eventIdColumn" text="ID Événement" prefWidth="100"/>
                <TableColumn fx:id="nomEventColumn" text="Nom de l'événement" prefWidth="150"/>
                <TableColumn fx:id="lieuColumn" text="Lieu" prefWidth="120"/>
                <TableColumn fx:id="periodeColumn" text="Période" prefWidth="150"/>
                <TableColumn fx:id="dateParticipationColumn" text="Date d'inscription" prefWidth="120"/>
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Button fx:id="btnRetour" text="Retour" onAction="#handleRetour"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>